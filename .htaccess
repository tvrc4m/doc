RewriteEngine On

#RewriteRule ^(.*)/$ /$1 [L,R=301]
RewriteRule ^api/app/?$ /index.php?app=app&act=index [L]
RewriteRule ^api/app/(\w+)?$ /index.php?app=app&act=detail&api=$1 [L]
RewriteRule ^api/http/?$ /index.php?app=http&act=index [L]
RewriteRule ^api/http/get/?$ /index.php?app=http&act=get [L]
RewriteRule ^(\w+)/(\w+)/?$ /index.php?app=$1&act=$2 [L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.php [L]