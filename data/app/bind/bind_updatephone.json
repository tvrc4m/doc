{
  "desc": "修改绑定的手机号",
  "params": {
    "uid": {
      "desc": "用户id",
      "must": "是",
      "type": "int"
    },
    "code": {
      "desc": "验证码",
      "must": "是",
      "type": "string"
    },
    "oldPhone": {
      "desc": "旧手机号",
      "must": "是",
      "type": "string"
    },
    "newPhone": {
      "desc": "新手机号",
      "must": "是",
      "type": "string"
    },
    "sessionid": {
      "desc": "发送短信验证码接口返回的sessionid  ",
      "must": "是",
      "type": "string"
    }
  },
  "return": {
    "error_code": {
      "desc": "错误码:0 成功 1失败 2失败 该手机已被别人绑定!",
      "type": "int"
    },
    "error_msg": {
      "desc": "错误消息 1(uid不能为空 旧手机号不能为空 旧手机号码不合法 新手机号不能为空 新手机号码不合法 请先获取短信验证码 短信验证码错误 短信验证码已超时，请重新发送短信) 2 该手机已被别人绑定!请换手机号",
      "type": "string"
    }
  },
  "title": "修改绑定的手机号",
  "type": "post",
  "url": "appapi/binding/updatePhone",
  "version": "v1.0.1"
}