{
  "desc": "因为直播对应三个状态值，每个状态下取的值是不一样的。",
  "params": {
    "live_id": {
      "desc": "直播id",
      "must": "是",
      "type": "int"
    },
    "live_type_id": {
      "desc": "直播类型id",
      "must": "是",
      "type": "int"
    }
  },
  "return": {
    "live_id": {
      "desc": "直播id",
      "must": "是",
      "type": "int"
    },
    "live_type_id": {
      "desc": "直播类型id",
      "must": "是",
      "type": "int"
    },
    "case_info": {
      "desc": "案件信息,<code>只有庭审直播有该字段</code>",
      "must": "否",
      "type": "string"
    },
    "court_info": {
      "desc": "庭审信息,<code>只有庭审直播有该字段</code>",
      "must": "否",
      "type": "string"
    },
    "court_logo": {
      "desc": "法院头像,<code>只有庭审直播有该字段</code>",
      "must": "是",
      "type": "string"
    },
    "court_live": {
      "desc": "法院直播的数量,<code>只有庭审直播有该字段</code>",
      "must": "是",
      "type": "int"
    },
    "court_name": {
      "desc": "法院名称,<code>只有庭审直播有该字段</code>",
      "must": "否",
      "type": "string"
    },
    "flash_obj": {
      "desc": "如果live_url为空,则取该字段，代表iframe嵌套的object对象",
      "must": "否",
      "type": "string"
    },
    "live_content": {
      "desc": "直播内容,<code>只有非庭审直播有该字段</code>",
      "must": "否",
      "type": "string"
    },
    "stat": {
      "desc": "直播状态.0: 预告 1:直播中 2:回顾",
      "must": "是",
      "type": "int"
    },
    "live_url": {
      "desc": "直播视频地址<code>原生时获取的直播视频地址</code>",
      "must": "是",
      "type": "string"
    },
    "duration": {
      "desc": "直播时长,可为空。<code>当回顾时(即:stat=2)才有确定的值</code>",
      "must": "是",
      "type": "string"
    },
    "views": {
      "desc": "直播访问量",
      "must": "是",
      "type": "int"
    },
    "cover_img": {
      "desc": "该直播封面图",
      "must": "否",
      "type": "string"
    },
    "is_liked": {
      "desc": "改用户是否点赞(0:未点赞;1:已点赞)",
      "must": "否",
      "type": "int"
    },
    "likes": {
      "desc": "点赞总数量",
      "must": "否",
      "type": "int"
    },
    "share.title": {
      "desc": "分享标题",
      "must": "是",
      "type": "string"
    },
    "share.subtitle": {
      "desc": "分享副标题",
      "must": "是",
      "type": "string"
    },
    "share.img": {
      "desc": "分享图片",
      "must": "是",
      "type": "string"
    },
    "share.url": {
      "desc": "分享的url",
      "must": "是",
      "type": "int"
    }
  },
  "title": "直播庭审详情页接口",
  "type": "post",
  "url": "appapi/live/getLiveDetail",
  "version": "v2.1.0"
}